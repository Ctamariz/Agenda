                android:id="@+id/tv_alpha_4"
                android:layout_width="match_parent"
                android:layout_height="30sp"
                android:textColor="#000000"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:textSize="15sp"
                android:text="Grupo"/>
            <TextView
                android:id="@+id/tv_cel_claro_mov"
                android:layout_width="match_parent"
                android:layout_height="30sp"
                android:textColor="#000000"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:textSize="15sp"
                android:text="C: 75308742 M: 75308742"/>
            <TextView
                android:id="@+id/tv_cel_cootel_casa"
                android:layout_width="match_parent"
                android:layout_height="30sp"
                android:textColor="#000000"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:textSize="15sp"
                android:text="Co: 75308742 Ca: 75308742"/>
            <TextView
                android:id="@+id/tv_cel_trabajo"
                android:layout_width="match_parent"
                android:layout_height="30sp"
                android:textColor="#000000"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:textSize="15sp"
                android:text="Tr: 75308742"/>

            <TextView
                android:id="@+id/tv_email1"
                android:layout_width="match_parent"
                android:layout_height="30sp"
                android:textColor="#000000"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:textSize="15sp"
                android:text="cvande@agaton.ni"/>
            <TextView
                android:id="@+id/tv_email2"
                android:layout_width="match_parent"
                android:layout_height="30sp"
                android:textColor="#000000"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:textSize="15sp"
                android:text="titovdv56@yahoo.com"/>



        </LinearLayout>
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent" android:layout_height="wrap_content"


        android:id="@+id/alpha_elegido2">




        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:orientation="vertical">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="75dip"
                >
            <TableRow>

            <RelativeLayout

                android:layout_width="0dp" android:layout_height="75dip"
                android:layout_weight="33"
                android:background="#0C8E36"
                android:id="@+id/telefono_rl"
                >

                <ImageView
                    android:src="@drawable/telefono"
                    android:id="@+id/iv_incidencia"
                    android:layout_centerHorizontal="true"
                    android:layout_width="75sp"

                    android:layout_height="75sp"
                   />





            </RelativeLayout>


            <RelativeLayout


                android:layout_width="0dp" android:layout_height="75dip"
                android:layout_weight="33"
                android:background="#F39200"
                android:id="@+id/sms">

                <ImageView
                    android:src="@drawable/sms"
                    android:id="@+id/iv_sms"
                    android:layout_centerHorizontal="true"
                    android:padding="3dp"
                    android:layout_width="75sp"
                    android:layout_height="75sp"/>





            </RelativeLayout>



            <RelativeLayout


                android:layout_width="0dp" android:layout_height="75dip"
                android:layout_weight="33"
                android:background="#1D70B7"
                android:id="@+id/email1"
                android:onClick="enviar_email">

                <ImageView
                    android:src="@drawable/email"
                    android:id="@+id/iv_mail1"
                    android:layout_centerHorizontal="true"
                    android:padding="3dp"
                    android:layout_width="75sp"
                    android:layout_height="75sp"/>


            </RelativeLayout>
            </TableRow>
            </TableLayout>
            <RelativeLayout


                android:layout_width="match_parent" android:layout_height="75dip"
                android:background="#7C0C0C"
                android:id="@+id/cancelar"
                android:onClick="enviar_email">

                <ImageView
                    android:src="@drawable/xjodida"
                    android:id="@+id/iv_cancelar"
                    android:layout_centerHorizontal="true"
                    android:padding="3dp"
                    android:layout_width="75sp"
                    android:layout_height="75sp"/>





            </RelativeLayout>
        </LinearLayout>



    </RelativeLayout>


            <include
                layout="@layout/telefonos_opciones"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <include
                layout="@layout/sms_opciones"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <include
                layout="@layout/enviar_sms"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </ScrollView>


</LinearLayout>


